hook: "S=$(xdpyinfo | grep dimensions | sed -r \"s/^[^0-9]*([0-9]+x[0-9]+).*$/\1/\");"
      "convert '$W' -gravity center -background '#073642' -extent '$S' '$W';"
      "BG=$(dirname '$W')/bg.png;"
      "cp -f '$W' '$BG';"
      "gsettings set org.gnome.desktop.background primary-color '#073642';"
      "gsettings set org.gnome.desktop.background secondary-color '#073642';"
      "gsettings set org.gnome.desktop.background color-shading-type 'solid';"
      "gsettings set org.gnome.desktop.background picture-uri '$BG';"
      "gsettings set org.gnome.desktop.background picture-uri-dark '$BG';"
